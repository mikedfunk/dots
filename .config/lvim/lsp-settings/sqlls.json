{
  "sqlLanguageServer.lint.rules": {
    "align-column-to-the-first": "warn",
    "column-new-line": "warn",
    "linebreak-after-clause-keyword": "warn",
    "reserved-word-case": ["off", "lower"],
    "space-surrounding-operators": ["error", "always"],
    "where-clause-new-line": "warn",
    "align-where-clause-to-the-first": "warn",
    "require-as-to-rename-column": "warn"
  }
}
