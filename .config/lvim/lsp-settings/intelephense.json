{
  "$schema": "https://raw.githubusercontent.com/tamago324/nlsp-settings.nvim/main/schemas/_generated/intelephense.json",
  "flags": { "debounce_text_changes": 500 },
  "filetypes": [ "php", "blade" ],
  "intelephense": {
    "environment": {
      "phpVersion": "7.4.7",
      "shortOpenTag": false
    },
    "diagnostics": { "enable": true, "run": "onSave" },
    "completion": {
      "fullyQualifyGlobalConstantsAndFunctions": true,
      "insertUseDeclaration": true
    },
    "phpdoc": { "classTemplate": { "tags": {} } },
    "rename": { "namespaceMode": "all" },
    "telemetry": { "enabled": false },
    "filetypes": [ "php", "blade" ],
    "files": {
      "associations": [ "*.php", "*.phtml", "*.blade.php" ],
      "exclude": [
        "**/.git/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/storage/**",
        "**/vendor/**/{Tests,tests,Test,test,Spec,spec,Specs,specs}/**",
        "**/.history/**",
        "**/vendor/**/vendor/**",
        "**/coverage/**",
        ".php-cs-fixer.php",
        "**/.null-ls_*"
      ]
    },
    "stubs": [
      "apache",
      "bcmath",
      "bz2",
      "calendar",
      "com_dotnet",
      "Core",
      "ctype",
      "curl",
      "date",
      "dba",
