        //         "--stdio"
        //     ],
        //     "environment": {
        //         "BIGQUERY_PROJECT": "bi-saatchi-fission",
        //     }
        // },
    },
    "formatter": {
        "php_cs_fixer": {
            "command": [
                "php-cs-fixer",
                "fix",
                "$FILE"
            ],
            "extensions": [
                "php"
            ]
        },
        "rector": {
            "command": [
                "rector",
                "process",
                "$FILE"
            ],
            "extensions": [
                "php"
            ]
        },
        "phpcbf": {
            "command": [
                "phpcbf",
                "$FILE"
            ],
            "extensions": [
                "php"
            ]
        }
    }
