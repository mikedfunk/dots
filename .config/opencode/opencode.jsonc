            "echo *": "allow",
            "find *": "allow",
            "git diff*": "allow",
            "git show *": "allow",
            "git status": "allow",
            "grep *": "allow",
            "head *": "allow",
            "ls*": "allow",
            "pwd": "allow",
            "rg *": "allow",
            "sort*": "allow",
            "tail *": "allow",
            "wc *": "allow"
