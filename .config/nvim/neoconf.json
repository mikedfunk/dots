{
  "lspconfig": {
    "harper_ls": {
      "harper-ls": {
        "linters": {
          "SpellCheck": false,
          "SentenceCapitalization": false
        },
        "userDictPath": "~/.config/nvim/spell/en.utf-8.add"
      }
    },
    "copilot": {
      "telemetry": {
        "telemetryLevel": "none"
      }
    },
    "emmet_language_server": {
      "emmet": {
        "includeLanguages": {
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "syntaxProfiles": {
          "jsx": {
            "self_closing_tag": true,
            "filters": "bem"
          }
        }
      }
    },
    "intelephense": {
      "intelephense": {
        "environment": {
          "shortOpenTag": false
        },
        "codeLens": {
          "implementations": {
            "enable": true
          },
          "overrides": {
            "enable": true
          },
          "parent": {
            "enable": true
          },
          "references": {
            "enable": true
          },
          "usages": {
            "enable": true
          }
        },
        "completion": {
          "fullyQualifyGlobalConstantsAndFunctions": true,
          "suggestObjectOperatorStaticMethods": false,
          "maxItems": 30
        },
        "phpdoc": {
          "classTemplate": {
            "tags": {}
          }
        },
        "rename": {
          "namespaceMode": "all"
        },
        "telemetry": {
          "enabled": false
        },
        "files": {
          "exclude": [
            "**/.git/**",
            "**/.DS_Store",
            "**/node_modules/**",
            "**/vendor/**/{Tests,tests,Test,test,Spec,spec,Specs,specs}/**",
            "**/vendor/**/vendor/**",
            "**/coverage/**"
          ]
        }
      }
    },
    "jsonls": {
      "json": {
        "schemas": [
          {
            "fileMatch": [
              "crush.json"
            ],
            "url": "https://charm.land/crush.json"
          }
        ]
      }
    },
    "lsp_ai": {
      "models": {
        "ollama_qwen2.5-coder:3b": {
          "type": "ollama",
          "model": "qwen2.5-coder:3b",
          "max_requests_per_second": 10
        }
      }
    },
    "sqlls": {
      "sqlLanguageServer": {
        "lint": {
          "rules": {
            "reserved-word-case": "lower"
          }
        }
      }
    },
    "vtsls": {
      "vtsls": {
        "autoUseWorkspaceTsdk": true
      }
    },
    "yamlls": {
      "flags": {
        "debounce_text_changes": 500
      },
      "yaml": {
        "schemas": {
          "https://json.schemastore.org/pre-commit-config.json": ".pre-commit-config.yaml"
        }
      }
    }
  }
}
