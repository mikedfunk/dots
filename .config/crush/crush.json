{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": [
      "grep",
      "ls"
    ]
  },
  "mcp": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "tree-sitter": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-tree-sitter"
      ]
    }
  }
}
