{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": [
      "grep",
      "ls"
    ]
  },
  "providers": {
    "ollama": {
      "name": "Ollama",
      "base_url": "http://localhost:11434/v1/",
      "type": "openai",
      "models": [
        {
          "name": "Qwen 2.5-code 3b",
          "id": "qwen2.5-coder:3b",
          "context_window": 256000,
          "default_max_tokens": 20000,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_in": 0,
          "can_reason": false,
          "has_reasoning_efforts": false,
          "supports_attachments": false
        },
        {
          "name": "Qwen 3-code 30b",
          "id": "qwen3-coder:30b",
          "context_window": 256000,
          "default_max_tokens": 20000,
          "cost_per_1m_in_cached": 0,
          "cost_per_1m_out_cached": 0,
          "cost_per_1m_out": 0,
          "cost_per_1m_in": 0,
          "can_reason": false,
          "has_reasoning_efforts": false,
          "supports_attachments": false
        }
      ]
    }
  },
  "mcp": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "memory": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "tree-sitter": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-tree-sitter"
      ]
    }
  }
}
